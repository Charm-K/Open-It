<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_ch3_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@mipmap/ch3mdpi"
        tools:layout_editor_absoluteX="-79dp"
        tools:layout_editor_absoluteY="-53dp" />

    <ImageView
        android:id="@+id/imageView_ch3_watertap"
        android:layout_width="270dp"
        android:layout_height="154dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="417dp"
        android:layout_marginBottom="194dp"
        android:onClick="onClickWaterTap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ch3_watertapmdpi" />

    <ImageView
        android:id="@+id/imageView_ch3_water"
        android:layout_width="117dp"
        android:layout_height="225dp"
        android:layout_marginStart="198dp"
        android:layout_marginTop="64dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_ch3_watertap"
        app:layout_constraintEnd_toEndOf="@+id/imageView_ch3_watertap"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView_ch3_watertap"
        app:layout_constraintTop_toTopOf="@+id/imageView_ch3_watertap"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/ch3_watermdpi"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/imageView_ch3_towel"
        android:layout_width="244dp"
        android:layout_height="142dp"
        android:layout_marginStart="391dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="214dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ch3_towelmdpi" />

    <ImageView
        android:id="@+id/imageView_ch3_waterOfTowel"
        android:layout_width="168dp"
        android:layout_height="97dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_ch3_towel"
        app:layout_constraintEnd_toEndOf="@+id/imageView_ch3_towel"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="@+id/imageView_ch3_towel"
        app:layout_constraintTop_toTopOf="@+id/imageView_ch3_towel"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/ch3_wateroftowelmdpi"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/imageView_ch3_handsoaf"
        android:layout_width="90dp"
        android:layout_height="148dp"
        android:layout_marginStart="505dp"
        android:layout_marginTop="247dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ch3_handsoafmdpi" />

    <ImageView
        android:id="@+id/imageView_ch3_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_ch3_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/guide_2" />
</androidx.constraintlayout.widget.ConstraintLayout>